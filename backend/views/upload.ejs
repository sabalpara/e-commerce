<!DOCTYPE html>
<html>
<head>
    <title>Upload Image</title>
</head>
<body>
    <h1>Upload a Product</h1>
    
    <form action="/api/product/add" method="POST" enctype="multipart/form-data">
        <!-- Product Fields -->
        <label>Product Name:</label><br>
        <input type="text" name="name" required /><br><br>

        <label>Description:</label><br>
        <textarea name="description" rows="4" cols="50" required></textarea><br><br>

        <label>Price:</label><br>
        <input type="number" name="price" step="0.01" required /><br><br>

        <label>Category:</label><br>
        <input type="text" name="category" required /><br><br>

        <label>Sub-Category:</label><br>
        <input type="text" name="subCategory" required /><br><br>

    <label>Sizes (as JSON array):</label><br>
   <input type="text" name="sizes" placeholder='["S", "M", "L"]' required /><br><br>
<input type="hidden" name="token" value="eyJhbGciOiJIUzI1NiJ9.YWRtaW5AZm9yZXZlci5jb21TamtAMjAwNQ.Gjf7IO7jIJLqRmjCH67z0agSyC44xq0TdrJeRf" />



        <label>Best Seller:</label><br>
        <select name="bestSeller">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br><br>

        <!-- Image Uploads -->
        <label>Select Image 1:</label><br>
        <input type="file" name="image1" accept="image/*" /><br><br>

        <label>Select Image 2:</label><br>
        <input type="file" name="image2" accept="image/*" /><br><br>

        <label>Select Image 3:</label><br>
        <input type="file" name="image3" accept="image/*" /><br><br>

        <label>Select Image 4:</label><br>
        <input type="file" name="image4" accept="image/*" /><br><br>

        <button type="submit">Upload</button>
    </form>
</body>
</html>
